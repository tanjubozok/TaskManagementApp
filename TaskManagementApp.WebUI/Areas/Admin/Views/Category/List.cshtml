@model List<CategoryListDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    TempData["Title"] = "Kategori Listesi";
}
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-house"></i>
                Anasayfa
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="fa-solid fa-layer-group"></i>
            @TempData["Title"]
        </li>
    </ol>
</nav>
<h3 class="mt-4">
    <i class="fa-solid fa-layer-group"></i>
    @TempData["Title"]
</h3>
<div class="mt-3">
    <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Create">
        <i class="fa-solid fa-square-plus"></i>
        Yeni Kategori
    </a>
</div>
<div class="mt-2">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead class="bg-dark text-white">
                <tr class="text-center">
                    <th class="col-9">Adı</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Definition</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Düzenle
                                </a>
                                <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-table-list"></i>
                                    Detay
                                </a>
                                <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-trash"></i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center">Henüz kategori bulunmamaktadır.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<h3 class="login-heading mb-4">
    Forgot Password
</h3>
<form>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" placeholder="username">
        <label for="floatingInput">
            Username
        </label>
    </div>
    <div class="d-grid">
        <button class="btn btn-lg btn-warning btn-login text-uppercase fw-bold mb-2" type="submit">
            Forgot Password
        </button>
        <div class="text-center">
            <a asp-area="" asp-controller="Account" asp-action="Login">
                Login
            </a>
        </div>
    </div>
</form>